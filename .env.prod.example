# ===================================
# AWS PRODUCTION Environment
# ===================================
# Domain: fz99lounge.com

# Environment
NODE_ENV=production

# ===================================
# Database Configuration (RDS)
# ===================================

DB_HOST=<rds-endpoint>.ap-northeast-1.rds.amazonaws.com
DB_PORT=5432
DB_USER=fz99admin
DB_PASSWORD=<secure-password>
DB_NAME=fz99_lounge_prod

DATABASE_URL=postgresql://${DB_USER}:${DB_PASSWORD}@${DB_HOST}:${DB_PORT}/${DB_NAME}?schema=public

# ===================================
# Redis Configuration (Docker)
# ===================================

REDIS_HOST=redis
REDIS_PORT=6379
REDIS_PASSWORD=<redis-password>
REDIS_URL=redis://:${REDIS_PASSWORD}@${REDIS_HOST}:${REDIS_PORT}

# ===================================
# API Configuration
# ===================================

API_PORT=3000
API_PREFIX=api

# ===================================
# Web Configuration
# ===================================

WEB_PORT=3001
NEXT_PUBLIC_BASE_URL=https://fz99lounge.com

# ===================================
# Authentication
# ===================================

JWT_SECRET=<generate-secure-key>
JWT_EXPIRES_IN=7d

# ===================================
# OAuth - Discord
# ===================================

DISCORD_CLIENT_ID=<your-discord-client-id>
DISCORD_CLIENT_SECRET=<your-discord-client-secret>
DISCORD_CALLBACK_URL=https://fz99lounge.com/api/auth/discord/callback

DISCORD_BOT_TOKEN=<your-bot-token>
DISCORD_GUILD_ID=<your-guild-id>
DISCORD_MATCH_ROOM_CATEGORY_ID=<your-category-id>
DISCORD_BOT_ENABLED=true

# ===================================
# Security
# ===================================

CORS_ORIGIN=https://fz99lounge.com

# ===================================
# S3 Configuration (AWS)
# ===================================

S3_BUCKET_NAME=fz99-lounge-screenshots-prod
S3_REGION=ap-northeast-1

# ===================================
# CDN (CloudFront)
# ===================================

CDN_URL=https://cdn.fz99lounge.com

# ===================================
# Push Notifications
# ===================================

VAPID_PUBLIC_KEY=<your-vapid-public-key>
VAPID_PRIVATE_KEY=<your-vapid-private-key>
VAPID_SUBJECT=mailto:admin@fz99lounge.com

# ===================================
# Login Tracking
# ===================================

ENABLE_LOGIN_TRACKING=true
MULTI_ACCOUNT_IP_THRESHOLD=3
SUSPICIOUS_LOGIN_ALERT_DAYS=30
